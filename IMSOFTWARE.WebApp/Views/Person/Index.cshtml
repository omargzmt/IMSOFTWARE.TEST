@using IMSOFTWARE.Models.ViewModels
@model CatPersonViewModel

@{
    ViewBag.Title = "Index";
}



<div class="container mt-4">
    <h4 class="">Lista de Personas</h4>
    <div class="row">
        <div class="col-12">
            @Html.ActionLink("Agregar Persona", "Add", "Person", new { @class = "btn btn-light" })
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered mt-2">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {

                    if (Model.People.Any())
                    {
                        foreach (var person in Model.People)
                        {
                            <tr>
                                <td>@person.Name</td>
                                <td>@person.Age</td>
                                <td>@person.Email</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center">No hay registros disponibles</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No hay registros disponibles</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>